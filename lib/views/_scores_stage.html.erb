<% unless @game.answers.nil? %>
  <div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped">
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Secret</th>
        <th>Attempts</th>
        <th>Hints</th>
        <th>Date</th>
      </tr>
      <% @game.answers.each do |line| %>
        <tr>
          <td><%= line[:name] %></td>
          <td><%= line[:result] %></td>
          <td><%= line[:secret] %></td>
          <td><%= line[:attempts] %></td>
          <td><%= line[:hints] %></td>
          <td><%= line[:time].strftime("%Y/%m/%d %H:%M:%S") %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% else %>
  The achievments are apsend. Be first, brake a new record!
<% end %>
<a href="/back" class="btn btn-default btn-xs">Menu</a>